<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :comenter %><br>
    <%= form.text_field :comenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.label :status %>
    <%= form.select :status, Visible::VALID_STATUSES, selected: "public" %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
